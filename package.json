{
  "name": "app",
  "private": true,
  "packageManager": "bun@1.3.3",
  "scripts": {
    "dev": "./bin/dev",
    "setup": "./bin/setup",
    "build": "bun bun.config.js",
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "test": "./bin/rails test",
    "ci": "./bin/ci",
    "stimulus:manifest:update": "./bin/rails stimulus:manifest:update",
    "format": "rubocop --fix",
    "icon:download": "ruby ./script/icon_download.rb",
    "app:rename": "ruby ./script/rename.rb",
    "db:schema:fresh": "ruby ./script/db_schema_fresh.rb"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.20",
    "daisyui": "^5.5.3"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "@tailwindcss/typography": "^0.5.19",
    "tailwindcss": "^4.1.16"
  }
}
