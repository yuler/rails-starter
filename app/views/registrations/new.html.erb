<div class="min-h-screen flex items-center justify-center bg-linear-to-br from-cyan-200 via-purple-300 to-pink-300 p-4">
  <div class="w-full max-w-md">
    <!-- Card -->
    <div class="card bg-white backdrop-blur-sm shadow-2xl">
      <div class="card-body p-8">
        <!-- Tabs -->
        <div role="tablist" class="tabs tabs-box w-fit px-2">
          <%= link_to "Sign in", new_session_path, role: "tab", class: "tab" %>
          <%= link_to "Sign up", new_registration_path, role: "tab", class: "tab tab-active" %>
        </div>

        <!-- Title -->
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Sign up</h2>

        <!-- Form -->
        <%= form_with url: session_path, class: "flex flex-col gap-4" do |form| %>
          <!-- Email Field -->
          <label class="form-control">
            <div class="label">
              <span class="label-text font-medium text-gray-700">Email</span>
            </div>
            <div class="relative mt-1">
              <span class="absolute inset-y-0 left-0 flex items-center pl-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-500 z-10">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                </svg>
              </span>
              <%= form.email_field :email, required: true, autofocus: true, autocomplete: "username", placeholder: "Your email", value: params[:email], class: "input input-bordered w-full pl-12" %>
            </div>
          </label>

          <!-- Password Field -->
          <label class="form-control">
            <div class="label">
              <span class="label-text font-medium text-gray-700">Password</span>
            </div>
            <div class="relative mt-1">
              <span class="absolute inset-y-0 left-0 flex items-center pl-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-500 z-10">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                </svg>
              </span>
              <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Your password", maxlength: 72, class: "input input-bordered w-full pl-12" %>
            </div>
          </label>

          <!-- Invite Code Field -->
          <label class="form-control">
            <div class="label">
              <span class="label-text font-medium text-gray-700">Invite Code</span>
            </div>
            <div class="relative mt-1">
              <span class="absolute inset-y-0 left-0 flex items-center pl-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-500 z-10">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
              </span>
              <%= form.text_field :invite_code, required: true, autocomplete: "off", placeholder: "Your invite code", class: "input input-bordered w-full pl-12" %>
            </div>
          </label>

          <!-- Submit Button -->
          <div class="form-control mt-6">
            <%= form.submit "Sign in", class: "btn bg-gray-900 hover:bg-gray-800 btn-lg w-full text-white border-0" %>
          </div>
        <% end %>

        <!-- Terms -->
        <p class="text-center text-sm text-gray-500 mt-6">
          By signing in, you agree to our <%= link_to "Terms & Service", "#", class: "link link-hover text-gray-600" %>
        </p>
      </div>
    </div>
  </div>
</div>
