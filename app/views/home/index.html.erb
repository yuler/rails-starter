<div class="min-h-screen max-w-5xl py-4 prose mx-auto">
  <h1>home page</h1>
  <p class="text-gray-500">This is the home page, <code>home_controller#index</code> and <code>home/index.html.erb</code>.</p>

  <div class="mt-4 flex gap-4 items-center">
    <span class="text-lg font-bold">You are signed in as <code><%= Current.user.email %></code>.</span>
    <%= button_to "Sign Out", session_path, class: "btn btn-error btn-sm", method: :delete %>
  </div>

  <%# Debug user, account %>
  <%# <h2>Current User and Accounts</h2> %>

  <p>Current User:</p>
  <%= debug Current.user.inspect %>

  <% if false %>
    <p>Current Account:</p>
    <div class="flex gap-4 items-center">
      Switch to other account: 
      <%= button_to Current.account.name, nil, class: "btn btn-primary btn-sm", role: "button", disabled: Current.account.id == Current.user.personal_account.id %>
      <% Current.user.accounts.each do |account| %>
        <%= button_to account.name, account_path(account), method: :get, class: "btn btn-primary btn-sm", role: "button" %>
      <% end %>
    </div>
    <%= debug Current.account.inspect %>
  <% end %>
</div>
